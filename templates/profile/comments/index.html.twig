{% extends 'base.html.twig' %} {% block title %} My comments {% endblock %}{%
block body %} {% include "partials/flash.html.twig" %} {% if
app.user.comments|length == 0 %}
<h1>No comments posted yet</h1>
<a class="btn btn-primary" href="{{ path('threads') }}">See threads</a>
{% endif %} {% for comment in app.user.comments %}
<div class="border p-4 m-4">
  <p class="text-truncate mb-4">
    On the post:
    <a
      href="{{ path('threads.show', { id: comment.thread.id }) }}"
      class="no-hover-link"
    >
      <b>
        {{ comment.thread.title }}
      </b>
    </a>
  </p>
  <p class="mb-2">you answered:</p>
  <p>
    {{ comment.content | nl2br }}
  </p>
  <div class="mt-4">
    <a
      href="{{ path('threads.show', { id: comment.thread.id }) }}"
      class="btn btn-primary btn-sm"
      >see original post
    </a>
    <a
      class="btn btn-primary btn-sm"
      href="{{ path('comments.edit', { id: comment.id }) }}"
      >Edit</a
    >
    <a
      class="btn btn-danger btn-sm"
      href="{{ path('comments.delete', { id: comment.id }) }}"
      >Delete</a
    >
  </div>
  {% if comment.isSolution %}
  <div class="alert alert-success mt-4">
    <p>Your answer was declared as the solution. Congrats!</p>
  </div>
  {% endif %}
</div>
{% endfor %} {% endblock %}
